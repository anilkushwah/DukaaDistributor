<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="0dp"
    android:padding="@dimen/_10sdp"
    android:paddingBottom="0dp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/orderdailog_radius"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please mention the reason of cancellation!"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_140sdp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_edittext_bck"
            android:orientation="horizontal">

            <TextView
                android:paddingRight="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center|left"
                android:inputType="text"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/et_reason_text"
                android:fontFamily="@font/poppins_light"
                android:text="Reason for cancellation"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_edittext_dec"
            android:orientation="horizontal">

            <EditText
                android:paddingTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@null"
                android:gravity="start|left"
                android:inputType="text"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/et_reason_"
                android:fontFamily="@font/poppins_light"
                android:hint="Write a Message!"/>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pastorder_shap"
            >

            <TextView
                android:textSize="@dimen/_12sdp"
                android:id="@+id/tv_submit"
                android:fontFamily="@font/poppins"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>