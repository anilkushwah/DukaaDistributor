<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".LoginActivity">

    <LinearLayout
        android:background="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/iv_login_back_arrow"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/ic_back_left"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:src="@drawable/d_dukka"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Welcome"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />

                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login 720"
                        android:layout_marginTop="@dimen/_minus3sdp"
                        android:textSize="@dimen/_18sdp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/white"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1.2"
                    android:layout_marginLeft="@dimen/_minus20sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    >

                <ImageView
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_color_logo"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:weightSum="2"
            android:background="@drawable/curve_bg_white_login"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_weight="1.7"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_15sdp"/>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_edittext_bck"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">




                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center|left"
                            android:inputType="text"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_light"
                            android:hint="Michael"/>

                    </LinearLayout>


                    <TextView
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_15sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_edittext_bck"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+254"
                            android:textSize="@dimen/_14sdp"
                            android:paddingLeft="@dimen/_10sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:gravity="center"
                            android:textSize="@dimen/_14sdp"
                            android:paddingLeft="@dimen/_5sdp"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center|left"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textSize="@dimen/_14sdp"
                            android:ems="10"
                            android:id="@+id/et_login_mobile_number"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_light"
                            android:hint="Enter Mobile Number"/>

                    </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_15sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_edittext_bck"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">





                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center|left"
                            android:inputType="textPassword"
                            android:maxLength="10"
                            android:textSize="@dimen/_14sdp"
                            android:ems="10"
                            android:id="@+id/et_login_password"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_light"
                            android:hint=" ********"/>

                    </LinearLayout>

                </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >
                        <View
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1.3"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_height="1dp"
                            android:background="#dddddd"/>

                        <TextView
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="OR"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            style="@style/normalFont"
                            android:textColor="@color/grey_2"/>

                        <View
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="#dddddd"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Don't have an Account?"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="right"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_13sdp"
                            android:layout_marginLeft="@dimen/_15sdp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Sign up"
                            android:id="@+id/tv_GoSignUp_Id"
                            android:fontFamily="@font/poppins_light"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/colorBlue"
                            android:layout_marginRight="@dimen/_15sdp"/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="0.3"
                android:background="@drawable/button_shap"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:text="Get OTP"
                    android:gravity="center"
                    android:id="@+id/btn_send_otp"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/poppins"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

