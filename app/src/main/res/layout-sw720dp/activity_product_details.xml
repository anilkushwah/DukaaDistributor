<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBody"
    tools:context=".Activity.ProductDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbaar_product_related"
        android:background="@drawable/lv_home_bck"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_back_left"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:gravity="center"
                        android:background="@drawable/filter_bck">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_search"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbaar_product_related"
        android:layout_above="@+id/lv_buttons"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/ic_heartdrawable">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_heart_unselect"/>

                    </LinearLayout>

                </RelativeLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vproduct_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    tools:listitem="@layout/fullimage_row" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llindicators_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_15sdp"
                    android:drawablePadding="@dimen/_4sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableRight="@drawable/ic_star"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh Fruits"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_13sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banana"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_rupee" />

                        <TextView
                            android:id="@+id/tv_ProductActualPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:breakStrategy="high_quality"
                            android:fontFamily="@font/poppins"
                            android:text="38/-"
                            android:textColor="@color/colorGreen"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_wishlist_price_cut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_rupee_grey"/>

                        <TextView
                            android:id="@+id/tv_CutPrice_Show"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:breakStrategy="high_quality"
                            android:fontFamily="@font/poppins"
                            android:text="38/-"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:text="10 pieces"
                        android:gravity="center|right"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:textSize="@dimen/_13sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.github.florent37.expansionpanel.viewgroup.ExpansionsViewGroupLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expansion_openOnlyOne="true"
                        android:orientation="vertical">

                        <com.github.florent37.expansionpanel.ExpansionHeader
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            app:expansion_headerIndicator="@id/headerIndicator"
                            app:expansion_layout="@id/expansionLayout"
                            app:expansion_toggleOnClick="true">

                            <RelativeLayout
                                android:background="@android:color/white"
                                android:layout_height="48dp"
                                android:layout_width="match_parent"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Description"
                                    android:id="@+id/tv_description"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="@dimen/_14sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_10sdp"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:adjustViewBounds="true"
                                    android:id="@+id/headerIndicator"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_width="wrap_content"
                                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#EEEEEE"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_8sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_below="@+id/tv_description"/>

                            </RelativeLayout>

                        </com.github.florent37.expansionpanel.ExpansionHeader>


                        <com.github.florent37.expansionpanel.ExpansionLayout
                            android:id="@+id/expansionLayout"
                            app:expansion_expanded="false"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                            <LinearLayout
                                android:id="@+id/container"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_15sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_100sdp"
                                    android:text="Lorem ipsum dolor sit amet, consectur adipsting elit, sed do eiusmed Lorem ipsum dolor sit amet, consectur adipsting elit, sed do eiusmed"
                                    android:gravity="center|left"
                                    android:fontFamily="@font/poppins_light"
                                    android:textSize="@dimen/_14sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>

                        </com.github.florent37.expansionpanel.ExpansionLayout>

                    </com.github.florent37.expansionpanel.viewgroup.ExpansionsViewGroupLinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Reviews (24)"
                        android:gravity="center|left"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_14sdp"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="View All"
                        android:gravity="center|right"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/colorBlue"
                        android:paddingLeft="@dimen/_10sdp"
                        android:drawableRight="@drawable/ic_chevron_right"
                        android:fontFamily="@font/poppins_light"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_minus10sdp"
                    android:numStars="5"
                    android:stepSize="1"
                    android:scaleX="0.6"
                    android:progressTint="#fada15"
                    android:layout_marginLeft="@dimen/_minus35sdp"
                    android:scaleY="0.6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="24 Reviews"
                        android:gravity="center|left"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="@dimen/_11sdp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Write a Review"
                            android:gravity="center|right"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorBlue"
                            android:fontFamily="@font/poppins_light"/>

                        <View
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="1dp"
                            android:layout_gravity="right"
                            android:background="@color/colorBlue"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Related Products"
                        android:gravity="center|left"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_14sdp"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="View All"
                        android:gravity="center|right"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/colorBlue"
                        android:paddingLeft="@dimen/_10sdp"
                        android:drawableRight="@drawable/ic_chevron_right"
                        android:fontFamily="@font/poppins_light"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:nestedScrollingEnabled="false">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_product_related_list"
                        android:padding="@dimen/_5sdp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_25sdp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/lv_buttons"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/product_quantity_pics">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:padding="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Add to Cart"
                android:textColor="@android:color/white"
                android:background="@drawable/product_quantity_pics_button"/>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>