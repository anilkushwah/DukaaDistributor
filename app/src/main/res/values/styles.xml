<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CustomViewAllTab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="tabIndicatorHeight">.5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="lineSpacing">0.3dp</item>
        <item name="fontFamily">@font/poppins</item>

    </style>


    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="tabIndicatorHeight">.5dp</item>
        <item name="lineSpacing">0.3dp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins</item>
    </style>


    <style name="normalFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="lightFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="semiboldFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>


    <style name="Switchtheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimaryDisableOnly">#1277BD</item>
        <item name="colorAccent">#6200EE</item>
    </style>
</resources>
