<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CustomViewAllTab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="tabIndicatorHeight">.5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="lineSpacing">0.3dp</item>
        <item name="fontFamily">@font/nexa_regular</item>

    </style>


    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="tabIndicatorHeight">.5dp</item>
        <item name="lineSpacing">0.3dp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="fontFamily">@font/nexa_regular</item>
    </style>


    <style name="normalFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/nexa_regular</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="lightFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/nexa_light</item>
    </style>

    <style name="semiboldFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/nexa_bold</item>
    </style>


    <style name="Theme.ToogleTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorBody</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorBody</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorBody</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>


    <style name="dialogstyle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowBackground">@android:color/transparent</item>


    </style>
</resources>
