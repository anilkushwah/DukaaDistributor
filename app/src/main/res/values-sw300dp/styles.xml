<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CustomViewAllTab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="tabIndicatorHeight">.5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="lineSpacing">0.3dp</item>
        <item name="fontFamily">@font/poppins</item>

    </style>


    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="tabIndicatorHeight">.5dp</item>
        <item name="lineSpacing">0.3dp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabSelectedTextColor">#000000</item>


        <item name="fontFamily">@font/poppins</item>
    </style>


    <style name="normalFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="lightFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="semiboldFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>


    <style name="Switchtheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimaryDisableOnly">#1277BD</item>
        <item name="colorAccent">#6200EE</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">#148E13</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins</item>
    </style>


    <style name="Theme.ToogleTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorBody</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorBody</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorBody</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>


    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>
</resources>
