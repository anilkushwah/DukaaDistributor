<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBody"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBody"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/lv_home_bck">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/home_top_shape_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="2">

                        <TextView
                            style="@style/normalFont"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:text="Orders"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout

                            android:id="@+id/request_credit_LL"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1.5"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/comment_req_back"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="Credit Requests"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_minus12sdp"
                                android:rotation="90"
                                android:src="@drawable/test_trangle" />

                            <RelativeLayout
                                android:id="@+id/rl_creditreq"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginLeft="@dimen/_minus15sdp">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_dollor" />

                                <TextView
                                    android:id="@+id/new_credit_request_tv"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_marginLeft="@dimen/_25sdp"
                                    android:background="@drawable/ic_red_circle_noti"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/normalFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:text="Accepting"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_4sdp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:theme="@style/Theme.ToogleTheme" />

                    </LinearLayout>


                        <LinearLayout
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:weightSum="4"
                            android:id="@+id/main_tab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/order_tabback"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/ll_tab_new"
                                android:layout_weight=".8"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/ordertabselected_back"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_new"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_3sdp"
                                    android:paddingVertical="@dimen/_5sdp"
                                    android:text="New"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                                <LinearLayout
                                    android:id="@+id/new_count_LL"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_tab_circle"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/new_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:gravity="center"
                                        android:textColor="@color/colorBlue"
                                        android:textSize="@dimen/_8sdp" />

                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_weight="1.2"
                                android:id="@+id/ll_tab_readyfor"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/ordertabselected_back"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:gravity="center"
                                    android:id="@+id/tv_readyfor"
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Ready For Pickup"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                                <LinearLayout
                                    android:id="@+id/ready_For_Pickup_LL"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/ic_tab_circle"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tvReadyForPickupCountId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:gravity="center"
                                        android:textColor="@color/colorBlue"
                                        android:textSize="@dimen/_8sdp"  />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_tab_processing"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/ordertabselected_back"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvDispatchId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:paddingHorizontal="@dimen/_3sdp"
                                    android:text="Dispatched"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />


                                <LinearLayout
                                    android:id="@+id/dispatch_LL"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/ic_tab_circle"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tvDispatchCountId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/colorBlue"
                                        android:gravity="center"
                                        android:textSize="@dimen/_8sdp" />

                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_weight="1"
                                android:id="@+id/ll_tab_completed"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/ordertabselected_back"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_completed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_3sdp"
                                    android:text=" Completed"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_9sdp" />

                                <LinearLayout
                                    android:id="@+id/CompleteCount_LL"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@drawable/ic_tab_circle"
                                    android:gravity="center"
                                  >

                                    <TextView
                                        android:id="@+id/tvCompleteCountId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textColor="@color/colorBlue"
                                        android:textSize="@dimen/_8sdp"  />

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_orders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:visibility="gone"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>