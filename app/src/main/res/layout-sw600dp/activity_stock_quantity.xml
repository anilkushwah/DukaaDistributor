<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.StockQuantityActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@color/colorPrimary">

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
    <ImageView
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:src="@drawable/ic_back_left"/>
        <TextView
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Stock Quantity"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp"
        android:background="@color/colorBody"/>

    <TextView
        android:fontFamily="@font/poppins"
        android:textColor="@color/grey_2"
        android:textSize="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:text="Stock Item"/>

    <View
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="@dimen/_8sdp"
        >

        <LinearLayout
           android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/et_edittext_bck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Select Categories"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/et_edittext_bck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Select Sub Categories"/>

        </LinearLayout>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_stock_item"/>


</LinearLayout>