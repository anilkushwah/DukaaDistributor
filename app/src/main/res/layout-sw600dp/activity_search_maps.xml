<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.fragment.app.FragmentContainerView
        android:layout_below="@+id/tool_searchbar"
        android:layout_above="@+id/btn_save_location"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SearchMapsActivity" />

    <LinearLayout
        android:id="@+id/tool_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:background="@drawable/lv_home_bck"
            android:weightSum="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/searchbox_bck">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_search"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        android:background="@null"
                        android:hint="Search Location..."
                        android:id="@+id/et_searchLocation"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins"
                        android:textSize="@dimen/_13sdp"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:id="@+id/iv_clear_editText_text"
                        android:src="@drawable/ic_cancel_text"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:gravity="center">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/ic_location_white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VishnuPuri"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:padding="@dimen/_4sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:layout_gravity="center"
                        android:layout_weight="1.2"
                        android:gravity="center|left"
                        android:text="302 dollop infotech VishnuPuri indore near ATM indore"
                        android:fontFamily="@font/poppins_light"
                        android:padding="@dimen/_3sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#F3EEEE"
                        android:layout_marginLeft="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnkioskId"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/splash_next_btn"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins"
                    android:padding="@dimen/_1sdp"
                    android:text="kiosk"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <Button
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:id="@+id/btn_other_location_id"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/location_other_btn"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins"
                    android:padding="@dimen/_1sdp"
                    android:text="others"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_save_location"
        android:layout_alignParentBottom="true"
        android:background="@drawable/curve_bg_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Save Location"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/poppins"
            />


    </LinearLayout>

</RelativeLayout>

