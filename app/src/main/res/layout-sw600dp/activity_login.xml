<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_Send"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:background="@color/colorBlue"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_color_logo" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1.2"
            android:background="@drawable/curve_bg_white_login"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Full Name"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_edittext_bck"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="center|left"
                            android:hint="Michael"
                            android:inputType="text"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins"
                        android:text="Mobile Number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/et_edittext_bck"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="+254"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />



                        <EditText
                            android:id="@+id/et_login_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="left"
                            android:hint="Enter Mobile Number"
                            android:inputType="phone"
                            android:textColor="@color/black"
                            android:maxLength="9"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>


                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/number_error_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="end"
                        android:paddingStart="@dimen/_20sdp"
                        android:paddingLeft="@dimen/_20sdp"
                        android:text="error"
                        android:textColor="@color/colorRed"
                        android:visibility="gone" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins"
                        android:text="Password"
                        android:textColor="@color/subhading_black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

             <!--       <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:gravity="center"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/et_login_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="left"
                            android:hint="password"
                            android:inputType="textPassword"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/et_edittext_bck"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_login_pass"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/show_password_img"
                            android:background="@null"
                            android:fontFamily="@font/poppins_light"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:hint="Password"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/show_password_img"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:srcCompat="@drawable/ic_baseline_visibility_24" />


                    </RelativeLayout>


                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/password_error_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="end"
                        android:paddingStart="@dimen/_20sdp"
                        android:paddingLeft="@dimen/_20sdp"
                        android:text="error"
                        android:textColor="@color/colorRed"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins"
                        android:gravity="right"
                        android:text="Forgot Password"
                        android:textColor="@color/subhading_black"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:background="#dddddd" />

                        <TextView
                            style="@style/normalFont"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="OR"
                            android:textColor="@color/grey_2"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.3"
                            android:background="#dddddd" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:fontFamily="@font/poppins_light"
                            android:gravity="right"
                            android:text="Don't have an Account?"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tv_GoSignUp_Id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/poppins_light"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="Sign up"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_Send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_send_otp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/button_shap"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="Login Now"
            android:textColor="@android:color/white"
            android:textFontWeight="600"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>

</RelativeLayout>

