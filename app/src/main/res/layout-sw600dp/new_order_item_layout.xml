<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/wishlist_prdct_blue_bck"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight=".5"
           >


            <ImageView
                android:id="@+id/ImageView_Item_ImageId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/no_product" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5sdp">

            <TextView
                android:textSize="@dimen/_10sdp"
                style="@style/normalFont"
                android:id="@+id/TextView_Item_NameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freash Onion"
                android:textColor="#000000"/>

            <TextView
                style="@style/normalFont"
                android:id="@+id/TextView_Item_QuantityId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2 Unit)"
                android:textSize="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/order_cal_back"
            android:padding="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_35sdp">

            <TextView
                android:id="@+id/order_qty"
                style="@style/normalFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                style="@style/normalFont"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/order_price"
                style="@style/normalFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorBlue"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">



            <TextView
                android:textSize="@dimen/_10sdp"
                style="@style/normalFont"
                android:drawablePadding="@dimen/_5sdp"

                android:id="@+id/TextView_Item_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80.00"
                android:textColor="#000000"/>



        </LinearLayout>
    </LinearLayout>


</LinearLayout>
