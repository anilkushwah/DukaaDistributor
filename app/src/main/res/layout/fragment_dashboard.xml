<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBody"
    tools:context=".ui.dashboard.DashboardFragment">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBody"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/lv_home_bck">

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                style="@style/normalFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                />



            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/home_top_shape_bg"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <TextView
                            style="@style/normalFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stock Left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">



                        <TextView
                            android:id="@+id/tv_view_all"
                            android:layout_marginRight="@dimen/_10sdp"
                            style="@style/normalFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Alll"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_double_angle_pointing_to_right"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:background="@color/colorBody" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <TextView
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_sales"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:textColor="@color/grey"
                android:layout_height="wrap_content"
                android:text="Total No.Of Product Sold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginHorizontal="@dimen/_10sdp"
                 >




                <LinearLayout
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_bg"
                    >

                <TextView
                        android:elevation="@dimen/_5sdp"
                        android:background="@color/white"
                        android:id="@+id/tv_daily"
                        style="@style/normalFont"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Weekly"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_ps_chart"
                    >

                    <TextView
                        android:id="@+id/order_accept"
                        style="@style/normalFont"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Weekly"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_ps_chart"
                    >

                    <TextView
                        android:id="@+id/tv_monthly"
                        style="@style/normalFont"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Monthly"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_ps_chart"
                    >

                    <TextView
                        android:id="@+id/tv_yearly"
                        style="@style/normalFont"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Yearly"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>




            </LinearLayout>


           <!-- <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"/>-->


            <com.anychart.AnyChartView
                android:id="@+id/any_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"/>

           <!-- <me.ithebk.barchart.BarChart
                android:id="@+id/bar_chart_vertical"
                app:bar_type="vertical"
                app:bar_width="@dimen/_15sdp"
                app:bar_color="@color/colorPrimary"
                app:bar_text_color="#808080"
                app:bar_text_size="10sp"
                app:bar_show_auto_color="false"
                app:bar_max_value="100"
                app:bar_spaces = "@dimen/_5sdp"
                app:bar_show_value="true"
                app:bar_show_animation="true"
                android:layout_width="wrap_content"
                android:layout_height="150dp"/>-->



        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    </LinearLayout>

</LinearLayout>