<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >


                <com.dollop.distributor.Activity.RoundedCornerImageLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:padding="@dimen/_2sdp"
                        android:id="@+id/retailer_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_blue"
                        android:scaleType="fitXY"/>

                </com.dollop.distributor.Activity.RoundedCornerImageLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    >
                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/name"
                        style="@style/normalFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alex Carey"/>

                    <TextView
                        android:id="@+id/mobile"
                        android:fontFamily="@font/poppins"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="right"
                        style="@style/lightFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1-7865475643"/>

                    <TextView
                        android:id="@+id/credit_status"
                        android:fontFamily="@font/poppins"
                        android:textSize="@dimen/_10sdp"
                        style="@style/lightFont"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Request"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"/>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="0.8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_btnbck">

                            <TextView
                                android:singleLine="true"
                                android:maxLines="1"
                                android:id="@+id/store_name"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/poppins"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:gravity="end"
                                android:ellipsize="end"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ondoor Store"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>
                    </LinearLayout>



                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/tv_reqamount"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0"
                        android:textColor="@color/colorGreen"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/poppins"/>



                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>


    </LinearLayout>





</RelativeLayout>