<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_semicircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/right_semicircle"
                android:layout_alignParentLeft="true" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:weightSum="1"
                >

                <TextView
                    android:id="@+id/tv_agencyname"
                    android:textSize="@dimen/_12sdp"
                    style="@style/normalFont"
                android:textColor="@color/black"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Aysha Agency"/>

                <TextView
                    android:textSize="@dimen/_12sdp"
                    style="@style/normalFont"
                    android:textColor="@color/grey_1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/or_items"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="items"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:weightSum="1"
                >

                <TextView
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/_12sdp"
                    android:letterSpacing="0.02"
                    style="@style/normalFont"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Order ID"/>


                <LinearLayout
                    android:layout_gravity="right"
                    android:gravity="right"
                   android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_rupee_green_small"
                        android:textSize="@dimen/_12sdp"
                        style="@style/normalFont"
                        android:textColor="@color/colorGreen"
                        android:id="@+id/order_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3500.00"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:weightSum="1"
                >

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:letterSpacing="0.02"
                    style="@style/normalFont"
                    android:textColor="@color/subhading_black"
                    android:id="@+id/gen_order_id"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="#79237492"/>


                <LinearLayout
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:textSize="@dimen/_12sdp"
                        style="@style/normalFont"
                        android:textColor="@color/colorRed"
                        android:id="@+id/tv_order_staus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Completed"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
</RelativeLayout>