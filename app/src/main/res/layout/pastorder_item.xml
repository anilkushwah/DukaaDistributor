<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >




        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
        >

            <TextView
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_notification_circle_small"
                android:textSize="@dimen/_10sdp"
                style="@style/normalFont"
                android:id="@+id/TextView_Item_NameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 Aug 2020"
                android:textColor="#000000"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TextView
                android:paddingBottom="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:background="@drawable/order_cal_back"
                android:id="@+id/order_qty"
                style="@style/normalFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Items"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_10sdp"/>





        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">



            <TextView
                android:textSize="@dimen/_10sdp"
                style="@style/normalFont"
                android:id="@+id/TextView_Item_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 80.00"
                android:textColor="#000000"/>



        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
