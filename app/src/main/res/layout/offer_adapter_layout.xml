<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:layout_marginLeft="@dimen/_4sdp"
            android:id="@+id/image_LL"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3">

            <com.dollop.distributor.Activity.RoundedCornerImageLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_2sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_businessman" />

            </com.dollop.distributor.Activity.RoundedCornerImageLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/details_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_LL"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1.7"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:paddingVertical="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TITLE"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/category_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category Type"
                    android:textStyle="bold"
                    android:paddingVertical="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/valid_from_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Valid From"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/valid_to_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Valid To "
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/percent_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />


                </LinearLayout>


                <TextView
                    android:id="@+id/type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />



            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/discription_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:text="Discription :"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/discription_tv"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_2sdp"
        android:layout_below="@+id/discription_title_tv"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:text="Discription"
        android:textSize="@dimen/_10sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/discription_tv"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="#dddddd" />

</RelativeLayout>