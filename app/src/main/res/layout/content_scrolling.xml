<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBody"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical"
            android:weightSum="2"
            android:visibility="gone"
            android:background="@drawable/lv_home_bck">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:text="Wishlist"
                android:gravity="bottom"
                android:padding="@dimen/_15sdp"
                android:fontFamily="@font/nexa_regular"
                android:textColor="#fff"
                android:textSize="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="All Products of wishlist"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/nexa_light"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:id="@+id/tv_wishlist_Edit"
                    android:gravity="center|right"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorBlue"
                    android:fontFamily="@font/nexa_light"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/tv_wishlist_Cancel"
                    android:gravity="center|right"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorBlue"
                    android:fontFamily="@font/nexa_light"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_wishlist_products_Id"
                    android:nestedScrollingEnabled="false"
                    android:padding="@dimen/_5sdp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>