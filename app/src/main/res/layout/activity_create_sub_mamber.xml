<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBody"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/toolbar_RL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/lv_home_bck">

        <ImageView
            android:id="@+id/sub_member_back"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_back_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/sub_member_back"
            android:fontFamily="@font/nexa_regular"
            android:text="Add Members"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_LL"
        android:layout_below="@+id/toolbar_RL"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp">


        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexa_regular"
                    android:text="Enter Member details"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp">


                    <LinearLayout
                        android:id="@+id/company_image_LL"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/upload_back"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Image"
                            android:textSize="@dimen/_6sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(optional)"
                            android:textSize="@dimen/_6sdp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/user_profile"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:alpha="0.9"
                        android:background="@drawable/upload_back"
                        android:scaleType="fitXY" />

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/nexa_regular"
                    android:text="Full Name "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/et_edittext_bck"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/m_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/nexa_light"
                        android:gravity="center|left"
                        android:hint="Enter User Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/nexa_regular"
                    android:text="Mobile Number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/et_edittext_bck"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/m_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/nexa_light"
                        android:gravity="center|left"
                        android:hint="Enter Mobile Number"
                        android:inputType="phone"
                        android:maxLength="9"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/nexa_regular"
                    android:text="Email-ID "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/et_edittext_bck"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/m_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/nexa_light"
                        android:gravity="center|left"
                        android:hint="Enter Email-ID"
                        android:inputType="textWebEmailAddress"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <!---->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/nexa_regular"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/et_edittext_bck"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/nexa_light"
                        android:gravity="center|left"
                        android:hint="*****"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/nexa_regular"
                    android:text="Designation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/et_edittext_bck"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/m_designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/nexa_light"
                        android:gravity="center|left"
                        android:hint="Select Designation"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/nexa_regular"
                    android:text="Employee ID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/et_edittext_bck"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/m_empId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/nexa_light"
                        android:gravity="center|left"
                        android:hint="Enter Employee ID"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/nexa_regular"
                    android:text="Access Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/m_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/full_radio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_weight="1"

                            android:checked="true"
                            android:gravity="center"
                            android:text="Full Aceess" />

                        <RadioButton
                            android:id="@+id/partial_radio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Partial Access" />


                    </RadioGroup>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_LL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_member"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/curve_bg_login"
            android:fontFamily="@font/nexa_light"
            android:gravity="center"
            android:text="Add Members"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>
</RelativeLayout>