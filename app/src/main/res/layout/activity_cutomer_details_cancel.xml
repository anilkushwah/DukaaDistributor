<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CutomerDetailsCancelActivity">

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:orientation="horizontal"
                android:background="@drawable/lv_home_bck">

                <ImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:id="@+id/credit_setback"
                    android:src="@drawable/ic_back_left"/>

                <TextView
                    android:textFontWeight="600"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center"
                    android:text="Customer Details"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.dollop.distributor.Activity.RoundedCornerImageLayout
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        >

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/client_03"/>

                    </com.dollop.distributor.Activity.RoundedCornerImageLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1.7"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            style="@style/normalFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alex Carey"
                            android:textColor="#000000" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:textColor="@color/grey_2"
                                style="@style/normalFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today,"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textColor="@color/grey_2"
                                style="@style/normalFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="03:45 PM"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >
                        <TextView
                            android:layout_weight="0.3"
                            android:drawablePadding="@dimen/_10sdp"
                            android:drawableLeft="@drawable/ic_notification_circle_small"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Shop Name"
                            android:fontFamily="@font/poppins"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/subhading_black"/>

                        <TextView
                            android:textFontWeight="600"
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/poppins"
                            android:textSize="@dimen/_12sdp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:text="Ondoor store"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/grey_1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >
                        <TextView
                            android:layout_weight="0.3"
                            android:drawablePadding="@dimen/_10sdp"
                            android:drawableLeft="@drawable/ic_notification_circle_small"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:fontFamily="@font/poppins"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/subhading_black"/>

                        <TextView
                            android:textFontWeight="600"
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/poppins"
                            android:textSize="@dimen/_12sdp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:text="Royal Agency \n56 HospitalIndore,452001"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/grey_1"/>

                    </LinearLayout>

                    <View
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >
                        <TextView
                            android:layout_weight="0.3"
                            android:drawablePadding="@dimen/_10sdp"
                            android:drawableLeft="@drawable/ic_notification_circle_small"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Discription"
                            android:fontFamily="@font/poppins"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/subhading_black"/>

                        <TextView
                            android:textFontWeight="600"
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/poppins"
                            android:textSize="@dimen/_12sdp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:text="Ondoor store"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/grey_1"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/grey_btnbck"
                            android:weightSum="1"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:text="Past Order"
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/poppins"/>

                            <LinearLayout
                                android:id="@+id/ll_pastorder"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:gravity="right"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:rotation="90"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/ic_double_angle_pointing_to_right"/>
                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/show_past_order"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:weightSum="3">


                            <TextView
                                android:textColor="@color/grey_2"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Items"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:textColor="@color/grey_2"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Quantity"
                                android:textSize="@dimen/_10sdp"/>

                            <TextView
                                android:textColor="@color/grey_2"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="Amount"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/rv_pastorder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_20sdp"
                >




                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_back"
                    >

                    <TextView
                        android:id="@+id/order_accept"
                        style="@style/normalFont"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:text="Accept"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>