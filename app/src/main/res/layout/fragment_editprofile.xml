<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBody">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/edit_profile_back"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/ic_back_left"/>

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Profile"
                    android:textFontWeight="700"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                     />



            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:background="@drawable/lv_home_bck">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">



             <com.dollop.distributor.Activity.RoundedCornerImageLayout
                 android:layout_width="@dimen/_60sdp"
                 android:layout_height="@dimen/_60sdp"
                 android:layout_margin="@dimen/_16sdp"
                 android:layout_gravity="center"
                 >
                 <ImageView
                     android:id="@+id/image"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:scaleType="fitXY"
                     android:src="@drawable/client_03" />

             </com.dollop.distributor.Activity.RoundedCornerImageLayout>



            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tool_pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alax Carey"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/tool_pro_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="store@gmail.com"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>

            </LinearLayout>



        </LinearLayout>

         <LinearLayout
            android:layout_marginTop="@dimen/_minus32sdp"
            android:layout_marginLeft="@dimen/_65sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/camera_circle"
            >

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_camera"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.88">

                <androidx.core.widget.NestedScrollView
                    android:layout_weight="0.9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    >

                    <LinearLayout
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Enter Full Name"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Distributor Location"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <EditText
                                android:id="@+id/create_name"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/et_edittext_bck"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/grey_2"
                                android:textSize="@dimen/_12sdp" />

                            <EditText
                                android:id="@+id/create_dis_location"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/et_edittext_bck"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/grey_2"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Store Address"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Business Email ID"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <EditText
                                android:id="@+id/create_store_address"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/et_edittext_bck"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/grey_2"
                                android:textSize="@dimen/_12sdp" />

                            <EditText
                                android:id="@+id/create_email"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/et_edittext_bck"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/grey_2"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Create Password"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Confirm Password"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <EditText

                                android:id="@+id/create_password"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/et_edittext_bck"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/grey_2"
                                android:textSize="@dimen/_12sdp" />

                            <EditText
                                android:id="@+id/confirm_pass"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/et_edittext_bck"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/grey_2"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Country"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Your Designation Field"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:orientation="horizontal">

                                <Spinner
                                    android:background="@drawable/et_edittext_bck"
                                    android:id="@+id/crate_country"
                                    style="@style/normalFont"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:entries="@array/countryname" />

                                <ImageView
                                    android:paddingRight="@dimen/_10sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_drop_down_arrow"/>


                            </RelativeLayout>


                            <EditText
                                android:id="@+id/create_desi_field"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:background="@drawable/et_edittext_bck"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/grey_2"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Key Contact No."
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <EditText
                                android:id="@+id/create_phone"
                                style="@style/normalFont"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/et_edittext_bck"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/grey_2"
                                android:textSize="@dimen/_12sdp" />



                        </LinearLayout>


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.12"
                    android:background="@drawable/curve_bg_login"
                    android:paddingBottom="@dimen/_10sdp"
                    >

                    <TextView
                        android:paddingTop="@dimen/_2sdp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        android:text="Update Profile"
                        android:id="@+id/btn_update_profile"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/poppins_light"
                        android:textFontWeight="600"
                        />

                </RelativeLayout>

        </LinearLayout>

</LinearLayout>