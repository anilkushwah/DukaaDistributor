<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    >


                    <com.dollop.distributor.Activity.RoundedCornerImageLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:scaleType="fitXY"
                            android:padding="@dimen/_2sdp"
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_user_blue"

                             />

                    </com.dollop.distributor.Activity.RoundedCornerImageLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        >
                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:id="@+id/name"
                        style="@style/normalFont"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Alex Carey"/>

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:id="@+id/amount_type"
                            android:gravity="right"
                            style="@style/normalFont"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Cash"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        >
                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:id="@+id/address"
                            android:textColor="@color/grey_2"
                            style="@style/normalFont"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Vishnupuri"/>

                        <LinearLayout
                            android:gravity="right"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            >

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorGreen"
                            android:id="@+id/amount"
                            android:drawablePadding="@dimen/_5sdp"

                            android:gravity="right"
                            style="@style/normalFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200.00"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="@dimen/_5sdp"
                >
                <TextView
                    android:fontFamily="@font/nexa_regular"
                    android:id="@+id/date"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/grey_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 jun 2020,10:29 AM"/>

                <TextView
                    android:fontFamily="@font/nexa_regular"
                    android:id="@+id/tv_view_details"
                    android:gravity="right"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"/>

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dddddd"/>


        </LinearLayout>





</RelativeLayout>